source 'https://rubygems.org'

gemspec

#
# Language core dependencies
#

# Build grammars with parslet
gem 'parslet'


#
# CLI dependencies
#

# Awesome ruby command line programs
gem 'thor'

# A more colorful command-line experience
gem 'paint', '~> 2.0', '>= 2.0.1'


#
# Serve dependencies
#

# Rack-it-up rack-it-up rack-it-up
gem 'rack'

# Use sinatra to build tiny ruby webapps
gem 'sinatra'

# Use thin to host fast ruby web servers
gem 'thin'

# Monitor files for changes (re-launch server)
gem 'filewatcher'

# Stylish stylesheets
gem 'sass'


#
# Dev + Test dependencies
#
group :development, :test do
  gem 'pry'
end
